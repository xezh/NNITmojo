CREATE TABLE "mp_surveyresponses" (
   "responseguid" char(36) NOT NULL, 
    "surveyguid" char(36) NOT NULL,
    "submissiondate" timestamp NULL,
    "annonymous" bool NOT NULL,
    "complete" bool NOT NULL,
