ALTER TABLE mp_surveyquestions
ADD CONSTRAINT pk_surveyquestions PRIMARY KEY (questionguid); 


CREATE TABLE "mp_surveyquestionoptions" (
   "questionoptionguid" char(36) NOT NULL, 
