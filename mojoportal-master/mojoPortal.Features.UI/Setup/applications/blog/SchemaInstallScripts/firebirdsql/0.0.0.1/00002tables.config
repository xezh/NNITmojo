CREATE TABLE MP_BLOGCATEGORIES
(
  CATEGORYID Integer NOT NULL,
  MODULEID Integer NOT NULL,
  CATEGORY Varchar(255) NOT NULL,
  PRIMARY KEY (CATEGORYID)
);
CREATE TABLE MP_BLOGCOMMENTS
(
  BLOGCOMMENTID Integer NOT NULL,
  MODULEID Integer NOT NULL,
  ITEMID Integer NOT NULL,
  "COMMENT" Blob sub_type 1 NOT NULL,
  TITLE Varchar(100),
  NAME Varchar(100),
  URL Varchar(200),
  DATECREATED Timestamp NOT NULL,
  PRIMARY KEY (BLOGCOMMENTID)
);
CREATE TABLE MP_BLOGITEMCATEGORIES
(
  ID Integer NOT NULL,
  ITEMID Integer NOT NULL,
  CATEGORYID Integer NOT NULL,
  PRIMARY KEY (ID)
);
CREATE TABLE MP_BLOGS
(
  ITEMID Integer NOT NULL,
  MODULEID Integer NOT NULL,
  CREATEDBYUSER Varchar(100),
  CREATEDDATE Timestamp,
  TITLE Varchar(100),
  EXCERPT Varchar(512),
  STARTDATE Timestamp,
  ISINNEWSLETTER Smallint,
  DESCRIPTION Blob sub_type 1,
  COMMENTCOUNT Integer NOT NULL,
  TRACKBACKCOUNT Integer NOT NULL,
  CATEGORIES Blob sub_type 1,
  INCLUDEINFEED Smallint NOT NULL,
  ALLOWCOMMENTSFORDAYS Integer NOT NULL,
  BLOGGUID Varchar(36),
  MODULEGUID Varchar(36),
  LOCATION Blob sub_type 1,
  USERGUID Varchar(36),
  LASTMODUSERGUID Varchar(36),
  LASTMODUTC Timestamp,
  ITEMURL Varchar(255),
  PRIMARY KEY (ITEMID)
);
CREATE TABLE MP_BLOGSTATS
(
  MODULEID Integer NOT NULL,
  ENTRYCOUNT Integer NOT NULL,
  COMMENTCOUNT Integer NOT NULL,
  TRACKBACKCOUNT Integer NOT NULL,
  MODULEGUID Varchar(36),
  PRIMARY KEY (MODULEID)
);
