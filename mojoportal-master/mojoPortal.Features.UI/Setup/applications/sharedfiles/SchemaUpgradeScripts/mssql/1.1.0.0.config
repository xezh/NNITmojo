ALTER PROCEDURE
	[dbo].[mp_SharedFilesHistory_Select]

@ModuleID	int,
@ItemID		int

AS

SELECT
	h.[ID],
	h.[ItemID],
	h.[ModuleID],
	h.[FriendlyName],
	h.OriginalFileName,
	h.[ServerFileName],
	h.SizeInKB,
	h.UploadDate,
	h.UploadUserID,
	h.[ArchiveDate],
	h.ViewRoles,
	u.[Name]

FROM
	[dbo].[mp_SharedFilesHistory] h

LEFT OUTER JOIN
	mp_Users u

ON
	u.UserID = h.UploadUserID

WHERE
	h.ModuleID = @ModuleID

AND
	h.ItemID = @ItemID

ORDER BY
	h.ArchiveDate DESC



