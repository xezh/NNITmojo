<?xml version="1.0" encoding="utf-8" ?>
<Definitions>
	<MarkupDefinition 
		name="Testimonials" 
		moduleClass="testimonials-module" 
		editPageClass="testimonials-edit" 
		fieldDefinitionSrc="$_SitePath_$/SuperFlexi/Fields/testimonials-fields.config" 
		fieldDefinitionGuid="6ff0f407-6854-4c9f-a8e8-06c0fea83905"
		useHeader="true"
		useFooter="false">
		
		<ModuleTitleFormat>
			<![CDATA[
				<h2 class="moduletitle flex-heading">{0}</h2>
			]]>
		</ModuleTitleFormat>

		<ModuleTitleMarkup>
			<![CDATA[
				$_ModuleTitle_$
			]]>
		</ModuleTitleMarkup>

		<ModuleLinksFormat>
			<![CDATA[
				<span class="modulelinks testimonials__module-edit-links">{0}{1}{2}{3}</span>
			]]>
		</ModuleLinksFormat>

		<ModuleInstanceMarkupTop><![CDATA[<div class="testimonials">$_ModuleLinks_$<div class="row">]]></ModuleInstanceMarkupTop>
		<ModuleInstanceMarkupBottom><![CDATA[</div></div>]]></ModuleInstanceMarkupBottom>

		<ModuleSettingsLinkFormat><![CDATA[<a class="ModuleEditLink flexi-settings" href="{0}"><span class="fa fa-cog"></span>Settings</a>|]]></ModuleSettingsLinkFormat>
		<EditHeaderLinkFormat><![CDATA[<a class="ModuleEditLink flexi-header-edit" href="{0}">Edit Header</a>]]></EditHeaderLinkFormat>
		<EditFooterLinkFormat><![CDATA[<a class="ModuleEditLink flexi-footer-edit" href="{0}">Edit Footer</a>]]></EditFooterLinkFormat>
		<AddItemLinkFormat><![CDATA[<a class="ModuleEditLink flexi-item-add" href="{0}"><span class="fa fa-plus"></span>Add Testimonial</a>|]]></AddItemLinkFormat>
		<ItemEditLinkFormat><![CDATA[<a class="ModuleEditLink testimonials__edit" href="{0}"><span class="fa fa-edit"></span>Edit Slide</a>]]></ItemEditLinkFormat>

		<HeaderContentFormat><![CDATA[<div class="testimonials__header col-sm-3">{0}<div class="testimonial__nav"></div></div>]]></HeaderContentFormat>
		<FooterContentFormat><![CDATA[<div class="testimonials__footer">{0}</div>]]></FooterContentFormat>

		<ItemsWrapperFormat><![CDATA[<div class="testimonials__items col-sm-9"><div class="testimonials__row row">{0}</div></div>]]></ItemsWrapperFormat>

		<!-- Rendered per x items, depending on value of itemsPerGroup int.
			 Option is not required. To show all items use itemsPerGroup="-1"
			 $_Items[#]_$ represents a particular item based on the index provided.
			 Indexes should always start at 0, and should include every int between
			 0 and the value of itemsPerGroup, but not the value of itemsPerGroup itself.

			 Item Markup determined below by <itemMarkup>
		-->

		
		<!-- <ItemsRepeaterMarkup itemsPerGroup="3"><![CDATA[<div class="row">$_Items[0]_$$_Items[1]_$$_Items[2]_$</div>]]></ItemsRepeaterMarkup> -->
		

		<!-- 
			Tokens must be defined in the Field Definition. Definition Developers are encouraged to document their tokens here.
			
			Static Tokens:
			Static Tokens are those which cannot be changed and are replaced with built-in functionality.
				$_EditLink_$
				$_ItemID_$
				$_SortOrder_$
				$_ModuleID_$ (can be used in ModuleInstanceMarkupTop, ModuleInstanceMarkupBottom, ItemMarkup)
				$_JSONNAME_$ (can be used in ModuleInstanceMarkupTop, ModuleInstanceMarkupBottom, ItemMarkup)
				$_FeaturedImageUrl_$  :  The module-level featured image url (can be used anywhere)
		-->
		<ItemMarkup>
			<![CDATA[
				<div class="testimonials__item text-center col-sm-4">
					$_EditLink_$
					<a class="testimonials__link" href="$link$">
						<img src="$image$" alt="$title$"/>
						<h5>$title$</h5>
						<p>$category$</p>
					</a>
				</div>
			]]>
		</ItemMarkup>
	
		<Scripts>
			<!-- 
			position (optional)
				inHead
				inBody (register script) (default)
				aboveMarkupDefinition
				belowMarkupDefinition
				bottomStartup (register startup script)
				
				preventing multiple instances of the same script from loading:
					set a name on the script element which should only be loaded once. Flexi will check if it"s already loaded by another instance of Flexi before loading the script.
					This only works for inHead, inBody and bottomStartup.
			-->
			<Script name="SlickJS" position="bottomStartup" src="$_SitePath_$/skins/axonom/js/slick.min.js"></Script>
			<Script name="Testimonials">
				<![CDATA[
					$(document).ready(function() {
						$('.testimonials__row').slick({
							dots: false,
							infinite: false,
							slidesToShow: 3,
							slidesToScroll: 1,
							appendArrows: $('.testimonial__nav'),
							prevArrow: '<button type="button" class="slick-prev"><span class="fa fa-chevron-left"></span></button>',
							nextArrow: '<button type="button" class="slick-next"><span class="fa fa-chevron-right"></span></button>',
							responsive: [
								{
									breakpoint: 768,
									settings: {
										slidesToShow: 1,
										slidesToScroll: 1
									}
								}
							]
						});
					});
				]]>
			</Script>
		</Scripts>
	</MarkupDefinition>
</Definitions>