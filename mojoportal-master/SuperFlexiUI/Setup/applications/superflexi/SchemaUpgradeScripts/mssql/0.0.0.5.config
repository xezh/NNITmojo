CREATE PROCEDURE [dbo].[i7_sflexi_items_SelectAllForDefinition]

/*
Author:   			i7MEDIA
Created: 			2015-11-18
Last Modified: 		2015-11-18
*/

@DefinitionGuid uniqueidentifier

AS


SELECT
[SiteGuid],
[FeatureGuid],
[ModuleGuid],
[ModuleID],
[DefinitionGuid],
[ItemGuid],
[ItemID],
[SortOrder],
[CreatedUtc],
[LastModUtc]

FROM
[dbo].[i7_sflexi_items]
WHERE
[DefinitionGuid] = @DefinitionGuid
ORDER BY [SortOrder] asc

