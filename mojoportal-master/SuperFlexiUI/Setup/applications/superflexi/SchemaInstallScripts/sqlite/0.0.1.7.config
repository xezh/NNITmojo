-- ----------------------------------------------------------------------------
-- table i7_sflexi_items
-- ----------------------------------------------------------------------------
CREATE TABLE `i7_sflexi_items` (
	`SiteGuid`	varchar (36) NOT NULL,
	`FeatureGuid`	varchar (36) NOT NULL,
	`ModuleGuid`	varchar (36) NOT NULL,
