CREATE TABLE `mp_PaymentLog` (
  `RowGuid` varchar(36) NOT NULL,
  `CreatedUtc` datetime NOT NULL,
  `SiteGuid` varchar(36) NOT NULL,
  `UserGuid` varchar(36) NOT NULL,
  `StoreGuid` varchar(36) NOT NULL,
  `CartGuid` varchar(36) NOT NULL,
  `Provider` varchar(100) default NULL,
  `RawResponse` text,
  `ResponseCode` varchar(1) default NULL,
  `ResponseReasonCode` varchar(20) default NULL,
  `Reason` text,
  `AvsCode` varchar(50) default NULL,
  `CcvCode` varchar(1) default NULL,
  `CavCode` varchar(1) default NULL,
  `TransactionId` varchar(50) default NULL,
  `TransactionType` varchar(50) default NULL,
  `Method` varchar(20) default NULL,
  `AuthCode` varchar(50) default NULL,
  `Amount` decimal(15,4) default NULL,
  `Tax` decimal(15,4) default NULL,
  `Duty` decimal(15,4) default NULL,
  `Freight` decimal(15,4) default NULL,
  PRIMARY KEY  (`RowGuid`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

INSERT INTO 	mp_PaymentLog
(
				RowGuid,
				CreatedUtc,
				SiteGuid,
				UserGuid,
				StoreGuid,
				CartGuid,
				Provider,
				RawResponse,
				ResponseCode,
				ResponseReasonCode,
				Reason,
				AvsCode,
				CcvCode,
				CavCode,
				TransactionId,
				TransactionType,
				Method,
				AuthCode,
				Amount,
				Tax,
				Duty,
				Freight
) 

SELECT
				RowGuid,
				CreatedUtc,
				SiteGuid,
				UserGuid,
				StoreGuid,
				CartGuid,
				'Authorize.NET',
				RawResponse,
				ResponseCode,
				ResponseReasonCode,
				Reason,
				AvsCode,
				CcvCode,
				CavCode,
				TransactionId,
				TransactionType,
				Method,
				AuthCode,
				Amount,
				Tax,
				Duty,
				Freight

FROM
		mp_AuthorizeNetLog;


