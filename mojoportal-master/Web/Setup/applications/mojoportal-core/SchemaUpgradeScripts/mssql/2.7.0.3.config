CREATE PROCEDURE [dbo].[mp_Sites_UpdateSkinVersionGuidForAllSites]
	@NewGuid uniqueidentifier
AS
BEGIN
	UPDATE mp_SiteSettingsEx
	SET KeyValue = @NewGuid
	WHERE KeyName = 'SkinVersion'
	AND GroupName = 'Settings';
END
GO
