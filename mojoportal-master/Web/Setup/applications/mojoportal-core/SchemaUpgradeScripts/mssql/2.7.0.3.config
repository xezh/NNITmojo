GO

CREATE PROCEDURE [dbo].[mp_RedirectList_GetSearchCount]

@SiteID int, 
@SearchTerm nvarchar(255)
AS

SELECT COUNT(*) 
FROM [dbo].[mp_RedirectList]
WHERE SiteID = @SiteID
AND (OldUrl LIKE '%' + @SearchTerm + '%' OR NewUrl LIKE '%' + @SearchTerm + '%')
GO


